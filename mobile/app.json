{
  "expo": {
    "name": "MeetConnect",
    "slug": "meetconnect",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.meetconnect.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby activities and people",
        "NSLocationAlwaysUsageDescription": "We need your location to notify you of nearby activities",
        "NSCameraUsageDescription": "Upload profile photos and activity pictures",
        "NSPhotoLibraryUsageDescription": "Choose photos for your profile and activities"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.meetconnect.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-location",
      "expo-camera",
      "expo-notifications"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "scheme": "meetconnect"
  }
}
