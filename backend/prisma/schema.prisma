// Prisma schema for PostgreSQL database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String?
  name          String
  bio           String?
  avatar        String?
  dateOfBirth   DateTime?
  gender        String?
  phone         String?
  verified      Boolean   @default(false)
  
  // Location
  latitude      Float?
  longitude     Float?
  city          String?
  country       String?
  
  // Interests (stored as JSON array)
  interests     Json?
  
  // OAuth
  googleId      String?   @unique
  facebookId    String?   @unique
  
  // Safety
  safetyRating  Float?    @default(5.0)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  activities    Activity[]
  participations ActivityParticipant[]
  sentMessages  Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
  reviews       Review[]  @relation("ReviewsGiven")
  receivedReviews Review[] @relation("ReviewsReceived")
  
  @@index([email])
  @@index([latitude, longitude])
}

model Activity {
  id            String    @id @default(uuid())
  title         String
  description   String
  category      String    // skiing, hiking, dining, etc.
  
  // Location
  latitude      Float
  longitude     Float
  address       String?
  city          String
  country       String
  
  // Time
  startTime     DateTime
  endTime       DateTime?
  
  // Limits
  maxParticipants Int?
  minAge        Int?
  maxAge        Int?
  
  // Status
  status        String    @default("active") // active, cancelled, completed
  isPublic      Boolean   @default(true)
  
  // Images
  images        Json?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  creator       User      @relation(fields: [creatorId], references: [id])
  creatorId     String
  participants  ActivityParticipant[]
  messages      Message[]
  
  @@index([latitude, longitude])
  @@index([category])
  @@index([startTime])
}

model ActivityParticipant {
  id          String    @id @default(uuid())
  status      String    @default("joined") // joined, left, removed
  joinedAt    DateTime  @default(now())
  
  activity    Activity  @relation(fields: [activityId], references: [id])
  activityId  String
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  
  @@unique([activityId, userId])
  @@index([activityId])
  @@index([userId])
}

model Message {
  id          String    @id @default(uuid())
  content     String
  type        String    @default("text") // text, image, location
  read        Boolean   @default(false)
  
  createdAt   DateTime  @default(now())
  
  // Relations
  sender      User      @relation("SentMessages", fields: [senderId], references: [id])
  senderId    String
  receiver    User?     @relation("ReceivedMessages", fields: [receiverId], references: [id])
  receiverId  String?
  activity    Activity? @relation(fields: [activityId], references: [id])
  activityId  String?
  
  @@index([senderId])
  @@index([receiverId])
  @@index([activityId])
}

model Review {
  id          String    @id @default(uuid())
  rating      Float     // 1-5
  comment     String?
  
  createdAt   DateTime  @default(now())
  
  // Relations
  reviewer    User      @relation("ReviewsGiven", fields: [reviewerId], references: [id])
  reviewerId  String
  reviewee    User      @relation("ReviewsReceived", fields: [revieweeId], references: [id])
  revieweeId  String
  
  @@unique([reviewerId, revieweeId])
  @@index([revieweeId])
}
